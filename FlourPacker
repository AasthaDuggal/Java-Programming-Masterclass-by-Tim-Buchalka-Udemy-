public class FlourPacker {
    public static boolean canPack(int bigCount, int smallCount, int goal){
        if (bigCount < 0 || smallCount < 0 || goal < 0)
            return false;
        else {
            if (bigCount > 0) {
                if (goal == (bigCount * 5))
                    return true;
                else if (goal > (bigCount * 5)) {
                    if (smallCount >= (goal - (bigCount * 5)))
                        return true;
                } else {
                    int less = (bigCount * 5) - goal;
                    while (less > 0) {
                        bigCount--;
                        less = (bigCount * 5) - goal;
                    }
                    if (smallCount >= (goal - (bigCount * 5)))
                        return true;
                    else return false;
                }
            } else {
                if (smallCount >= goal)
                    return true;
                else return false;
            }
            return false;
        }
    }
}
