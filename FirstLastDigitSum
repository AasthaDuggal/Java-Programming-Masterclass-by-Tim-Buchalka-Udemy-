public class FirstLastDigitSum {
    public static int sumFirstAndLastDigit (int number){
        if(number<0){
            return -1;
        }else {
            int sum =0, lastDigit=0;
            sum = number%10;
            for(int i =number; i>=1;i=i/10){
                lastDigit = i%10;
            }
            return (sum + lastDigit);
        }
    }
}
